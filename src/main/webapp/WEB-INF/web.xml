<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Sistema de Gestão de Materiais - Paraíso Gráfica Rápida</display-name>
    <description>Sistema para gerenciar materiais de uma gráfica</description>

    <!-- Página de boas-vindas -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Configuração de sessão -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!-- Filtro de autenticação -->
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>com.paraisografica.servlet.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Página de erro personalizada -->
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/views/erro.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/views/erro.jsp</location>
    </error-page>

</web-app>
