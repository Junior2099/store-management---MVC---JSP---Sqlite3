<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>Paraíso Gráfica Rápida</display-name>

    <!-- Filtro para garantir UTF-8 em todas as requisições/respostas -->
    <filter>
        <filter-name>encodingFilter</filter-name>
        <filter-class>com.magazineluiza.estoque.filter.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Filtro de autenticação para proteger as rotas -->
    <filter>
        <filter-name>authFilter</filter-name>
        <filter-class>com.magazineluiza.estoque.filter.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>authFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Garante que o listener suba também em containers sem annotation scanning -->
    <listener>
        <listener-class>com.magazineluiza.estoque.config.AppBootstrapListener</listener-class>
    </listener>

    <!-- Servlets de login/logout (caso algum container não faça scanning) -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.magazineluiza.estoque.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.magazineluiza.estoque.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
</web-app>


